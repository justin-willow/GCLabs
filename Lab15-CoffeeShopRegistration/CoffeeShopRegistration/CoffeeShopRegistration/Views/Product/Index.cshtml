@model List<Product>
<div class="text-center">
    <h1>Product List</h1>
    <h3><i>"Unleash the Aardvark Awakening in Every Sip!"</i></h3>
</div>

<div class="row">
    <div class="text-center">
        <form asp-controller="Product" asp-action="Index">
            <div class="input-group mb-3">
                <input name="searchTerm" type="text" class="form-control" placeholder="Search" aria-label="Search Bar" aria-describedby="basic-addon2">
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

<div class="row">
    @foreach (var product in Model)
    {<div class="col-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@product.Category.ToString()</h6>
                    <p class="card-text">@product.Description</p>
                    <a class="btn-primary" href="/Product/GetById/@product.Id">Details</a>
                </div>
            </div>
        </div>
    }
</div>