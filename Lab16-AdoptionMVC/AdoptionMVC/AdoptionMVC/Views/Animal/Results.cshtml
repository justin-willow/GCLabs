@model List<Animal>
@{
    ViewData["Title"] = "Adoptable Pets";
}

<div class="text-center">
    <h1>Animals Available for Adoption</h1>
</div>
<style>
    .custom-card-image {
        max-width: 200px;
        max-height: 200px;
        width: auto;
        height: auto;
        object-fit: cover;
    }
</style>
<div class="row">
    @foreach (var animal in Model)
    {
        <div class="col-3">
            <div class="card" style="width: 18rem;">
                <img src="@animal.Img" class="card-img-top mx-auto custom-card-image" alt="@animal.Name">
                <div class="card-body">
                    <h5 class="card-title">@animal.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@animal.Breed</h6>
                    <h6 class="card-subtitle mb-2 text-muted">Age: @animal.Age</h6>
                    <p class="card-text">@animal.Description</p>
                    <form method="post" asp-action="Adopt" asp-route-id="@animal.Id">
                        <button type="submit" class="btn btn-primary">Adopt</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>